.container
  %h2= @picture.title
  .picture-show-wrapper
    .picture-show-container
      .picture-comments-container
        - if @comments.total_pages > 1
          %button.btn.btn-info.btn-block#load_comment{pages:"#{@comments.total_pages}"}
            Load 5 prev comments ...
        - @comments.reverse.each do |comment|
          %div
            %span.label.label-inverse= comment.user.name
            %span.label.label-info.label-right=  comment.created_at.strftime('%m-%d-%Y at %H:%M')
            .well.well-small
              = comment.description
      .picture-show-td
        = image_tag @picture.image.url, id: 'picture', alt: @picture.image_file_name, class: 'img-polaroid'
        %div.btn-group
          %span.btn.btn-inverse.disabled
            = "likes count (#{@picture.likes_count})"
          - if @picture.users.include? current_user
            %a.btn.btn-inverse#dislike
              %i.icon-thumbs-down.icon-white
          - else
            %a.btn.btn-inverse#like
              %i.icon-thumbs-up.icon-white
        %div= "Comments (#{@picture.comments_count})"
    = form_for @picture.comments.build, :url => comment_create_path do  |f|
      .input-append
        = f.hidden_field :picture_id
        = f.text_field :description, placeholder: 'Comment text...', class: 'input-xlarge', autofocus: true
        = f.submit 'add comment', class: 'btn'